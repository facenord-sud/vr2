.row
  .columns.large-6.medium-6
    .row
      .columns.small-12
        -Sponsor.where(category: :gold).each do |p|
          .panel
            =link_to(image_tag(p.image.asset.url, :'max-width' => 460,:'max-height' => 263), p.url, class: 'th')
            %h3= link_to p.title, p.url
  .columns.large-6.medium-6
    =image_tag 'sponsor.jpg', alt: 'image manquante de Valentin Rota', title: 'Valentin Rota remercie ses sponsors et donateurs'
.row
  .columns.small-12.medium-4.large-4
    .panel
      %h4 Sponsors Silver
      -Sponsor.where(category: :silver).each do |p|
        =link_to(image_tag(p.image.asset.url), p.url)
        %h5= link_to p.title, p.url
        %hr

  .columns.large-4.medium-4.small-12
    .panel
      %h4 Sponsors Bronze
      -Sponsor.where(category: :bronze).each do |p|
        =link_to(image_tag(p.image.asset.url, :'width' => 288, :'height' => 116), p.url)
        %h5= link_to p.title, p.url
  .columns.large-4.medium-4.small-12
    .panel
      %h4 Partenaires
      -Sponsor.where(category: :partner).each do |p|
        =link_to(image_tag(p.image.asset.url, :'width' => width, :'height' => height), p.url)
        %h5= link_to p.title, p.url
        %hr
.row
